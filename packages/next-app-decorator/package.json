{
  "name": "nextjs-route-decorator",
  "description": "A decorator for Next.js API routes",
  "version": "0.1.7",
  "keywords": [
    "nextjs",
    "typescript",
    "decorator",
    "api",
    "openapi"
  ],
  "author": {
    "name": "cuongboi",
    "url": "https://github.com/cuongboi"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cuongboi/nextjs-route-decorator.git"
  },
  "license": "MIT",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": {
      "default": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "import": {
      "default": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "pkgroll --watch",
    "build": "pkgroll --minify",
    "test": "jest",
    "test:cov": "jest --collectCoverage ",
    "prepack": "pnpm test && pnpm build",
    "release": "npm version patch --no-git-checks && npm publish --access public"
  },
  "devDependencies": {
    "@scalar/nextjs-api-reference": "^0.7.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22",
    "jest": "^29.7.0",
    "lru-cache": "^11.1.0",
    "openapi3-ts": "^4.4.0",
    "path-to-regexp": "^8.2.0",
    "pkgroll": "^2.11.2",
    "tosource": "2.0.0-alpha.3",
    "ts-jest": "^29.3.1"
  },
  "peerDependencies": {
    "next": "^15",
    "typescript": "^5",
    "zod": "^3"
  },
  "dependencies": {
    "core-js": "^3.41.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.8.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
